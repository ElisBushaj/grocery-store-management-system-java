<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../Styles/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grc.GroceryStore.Controllers.LoginController">
   <VBox alignment="CENTER" prefHeight="606.0" prefWidth="272.0" styleClass="left_container">
      <Label prefHeight="32.0" prefWidth="92.0" text="Welcome" textFill="WHITE" textOverrun="CLIP" wrapText="true">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
   </VBox>
   <VBox alignment="CENTER" layoutX="438.0" layoutY="138.0" prefHeight="330.0" prefWidth="291.0" styleClass="form_container">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <Label prefHeight="27.0" prefWidth="326.0" text="Email">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="email_fld" prefHeight="38.0" prefWidth="290.0" />
      <Label prefHeight="27.0" prefWidth="388.0" text="Password">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="password_fld" prefHeight="38.0" prefWidth="290.0" />
      <Button fx:id="login_btn" mnemonicParsing="false" prefHeight="37.0" prefWidth="170.0" styleClass="login_button" text="Login" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
   </VBox>
</AnchorPane>
